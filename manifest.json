{
  "manifest_version": 2,
  "name": "Language Fixer",
  "version": "1.0.0",
  "description": "Make words in right language.",
  "icons": {
    "12": "icon12.png",
    "48": "icon48.png"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "index.js"
  ]
}